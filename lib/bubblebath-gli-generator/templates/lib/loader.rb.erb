require '<%= BubblebathGliGenerator::Project.camelize(name) %>/loader'
module <%= BubblebathGliGenerator::Project.camelize(name) %>
  class Loader
    class << self
      @@loaded = {}

      def load_workflow(name)
        load_files name, "*{_view}.rb"
